<%if @tadpole.errors.any?%>
<ul id="errors">
  <%@tadpole.errors.full_messages.each do |message|%>
    <li><%=message%></li>
  <%end%>
</ul>
<%end%>

<%= form_for(@tadpole) do |f|%>
  <%=f.label :name %>
  <%=f.text_field :name %><br>
  <%if params[:action] == "edit"%>
    <%=f.label :color %>
    <%=f.text_field :color %><br>
  <%else%>
    <%=f.hidden_field :color, value: @frog.color%>
    <%=f.hidden_field :frog_id, value: @frog.id%><br>
  <%end%>
  <%=f.submit %>
<% end %>
